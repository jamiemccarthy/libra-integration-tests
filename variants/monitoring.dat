monitor_variants:
  description: 'monitoring test gauntlet'
  monitor_values:
    - description: 'bad delay + monitor timeout > delay'
      monitor:
          delay: 0
          attemptsBeforeDeactivation: 2
          type: CONNECT 
          timeout: 30

    - description: "timeout > delay"
      monitor:
          delay: 10
          attemptsBeforeDeactivation: 2
          type: 'CONNECT'
          timeout: 30

    #- description: "negative delay"
    #  monitor:
    #     - delay: -1
    #       attemptsBeforeDeactivation: 2
    #       type: 'CONNECT'
    #      timeout: -1
        
    #- description: zero delay
    #  monitor:
    #     - delay: 0
    #       attemptsBeforeDeactivation: 2
    #       type: 'CONNECT'
    #      timeout: 0

    - description: "fractional delay"
      monitor:
           delay: .5
           attemptsBeforeDeactivation: 2
           type: 'CONNECT'
           timeout: 0

    - description: "nonnumeric delay"
      monitor:
           delay: 'abbazabba'
           attemptsBeforeDeactivation: 2
           type: 'CONNECT'
           timeout: 0

    - description: "overlarge values"
      monitor:
           delay: 1000000000000
           attemptsBeforeDeactivation: 2
           type: 'CONNECT'
           timeout: 1000000000000

    - description: "large values"
      monitor:
           delay: 1000000000
           attemptsBeforeDeactivation: 2
           type: 'CONNECT'
           timeout: 1000000000

    - description: "nonnumeric timeout"
      monitor:
           delay: 100
           attemptsBeforeDeactivation: 2
           type: 'CONNECT'
           timeout: 'a'

    - description: "oversmall timeout"
      monitor:
           delay: 100
           attemptsBeforeDeactivation: 2
           type: 'CONNECT'
           timeout: 0

     #- description: "negative timeout"
     #  monitor:
     #    - delay: 100
     #      attemptsBeforeDeactivation: 2
     #      type: 'CONNECT'
     #     timeout: -1

    - description: "NULL timeout"
      monitor:
           delay: 100
           attemptsBeforeDeactivation: 2
           type: 'CONNECT'
           timeout: None

    - description: "No timeout value"
      monitor:
           delay: 100
           attemptsBeforeDeactivation: 2
           type: 'CONNECT'

    - description: "No delay value"
      monitor:
           attemptsBeforeDeactivation: 2
           type: 'CONNECT'
           timeout: 30

    - description: "No type"
      monitor:
           delay: 100
           attemptsBeforeDeactivation: 2
           timeout: 30

    - description: "Bad type"
      monitor:
           delay: 100
           attemptsBeforeDeactivation: 2
           type: 'SUPERMONITOR'
           timeout: 30

    - description: "fuzzy type"
      monitor:
           delay: 100
           attemptsBeforeDeactivation: 2
           type: 'CONNECT1'
           timeout: 30

    - description: "overlarge attempts count"
      monitor:
           delay: 60
           attemptsBeforeDeactivation: 11
           type: 'CONNECT'
           timeout: 60

    - description: "oversmall attempts count"
      monitor:
           delay: 60
           attemptsBeforeDeactivation: 0
           type: 'CONNECT'
           timeout: 60

    - description: "negative attempts count"
      monitor:
           delay: 60
           attemptsBeforeDeactivation: -1
           type: 'CONNECT'
           timeout: 60

    - description: "nonnumeric attempts count"
      monitor:
           delay: 60
           attemptsBeforeDeactivation: "a"
           type: 'CONNECT'
           timeout: 60

    - description: "NULL attempts count"
      monitor:
           delay: 60
           attemptsBeforeDeactivation: None
           type: 'CONNECT'
           timeout: 60

    - description: "HTTP positive"
      monitor:
           delay: 60
           attemptsBeforeDeactivation: 1
           type: 'HTTP'
           timeout: 60
           path: '/'
 
    - description: "HTTP - no path"
      monitor:
           delay: 60
           attemptsBeforeDeactivation: 1
           type: 'HTTP'
           timeout: 60
          

    - description: "HTTP - no delay"
      monitor:
           attemptsBeforeDeactivation: 1
           type: 'HTTP'
           timeout: 60
           path: '/'
 
    - description: "HTTP - no attemptsBeforeDeactivation"
      monitor:
           delay: 60
           type: 'HTTP'
           timeout: 60
           path: '/'

    - description: "HTTP - no timeout"
      monitor:
           delay: 60
           attemptsBeforeDeactivation: 1
           type: 'HTTP'
           path: '/'

    - description: "HTTP bad path 1"
      monitor:
           delay: 60
           attemptsBeforeDeactivation: 1
           type: 'HTTP'
           timeout: 60
           path: 'cgi-bin/ident-cgi.py'

    - description: "HTTP bad path 2"
      monitor:
           delay: 60
           attemptsBeforeDeactivation: 1
           type: 'HTTP'
           timeout: 60
           path: '/ cgi-bin/ident-cgi.py'

 
